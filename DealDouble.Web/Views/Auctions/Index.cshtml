@model List<DealDouble.Entities.Auction>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table>
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                ActualAmount
            </th>
            <th>
                StartingTime
            </th>
            <th>
                EndTime
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auction in Model)
        {
        <tr>
            <td>@auction.Id</td>
            <td>@auction.Title</td>
            <td>@auction.Description</td>
            <td>@auction.ActualAmount</td>
            <td>@auction.StartingTime</td>
            <td>@auction.EndTime</td>
            <td>
                <button>
                    Delete
                </button>
            </td>
        </tr>
        }

    </tbody>
</table>

