@model List<DealDouble.Entities.Auction>
@{
    ViewBag.Title = "Index";
}
<div class="row container-fluid">
    <div class="col-lg-12" id="listingArea">
        <h2>Auctions</h2>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        ActualAmount
                    </th>
                    <th>
                        StartingTime
                    </th>
                    <th>
                        EndTime
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var auction in Model)
                {
                    <tr>
                        <td>@auction.Id</td>
                        <td>@auction.Title</td>
                        <td>@auction.Description</td>
                        <td>@auction.ActualAmount</td>
                        <td>@auction.StartingTime</td>
                        <td>@auction.EndTime</td>
                        <td>
                            <button class="editBtn btn btn-primary" data-id="@auction.Id">Edit</button>
                            <button class="deleteBtn btn btn-danger" data-id="@auction.Id">Delete</button>

                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div>
            <button type="button" id="createButton" class="btn btn-secondary">
                Create Auction
            </button>
        </div>
        <div id="contentArea"></div>

    <script>
          $("#createButton").click(function () {
            $.ajax({
            url: "/Auctions/Create",
            method: "get"
            }).done(function (response) {
            debugger;
            $("#contentArea").html(response);
            });
            });

            $(".editBtn").click(function () {
            $.ajax({
            url: "/Auctions/Edit/",
            method: "get",
                    data: {
                    ID: $(this).attr("data-id")
                }
            }).done(function (response) {
                debugger;
                $("#contentArea").html(response);
            });
        });

        $(".deleteBtn").click(function () {
            var result = confirm("Want to Delete?");
            if (result == true) {
                debugger;
                $.ajax({
                    url: "/Auctions/Delete/",
                    method: "post",
                    data: {
                        ID: $(this).attr("data-id")
                    }
                }).done(function (response) {
                    debugger;
                    $("#listingArea").html(response);
                });
            }
        });
    </script>
    </div>
</div>



            
           
                
